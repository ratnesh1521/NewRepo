<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

	<bean id="acc" class="com.ratnesh.beans.Account">
		<property name="accNo" value="12345"/>
		<property name="accName" value="Ratnesh"/>
		<property name="accType" value="savings"/>
		<property name="accBal" value="15000"/>
	</bean>
		
	<bean id="addr" class="com.ratnesh.beans.Address">
		<property name="hno" value="24"/>
		<property name="street" value="bbb"/>
		<property name="town" value="mahua"/>
		<property name="dist" value="vaishali"/>
		<property name="state" value="bihar"/>
	</bean>
	<bean id="empBean" class="com.ratnesh.beans.Employee">
		<property name="eno" value="e-111"/>
		<property name="ename" value="Ratnesh"/>
		<property name="esal" value="15000"/>

	</bean>


</beans>

